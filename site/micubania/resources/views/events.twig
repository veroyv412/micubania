{% extends 'layout/base.twig' %}

{% block title%}Eventos y Jornadas | Mi Cubania{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <section class="page-title page-title-2 image-bg overlay parallax">
        <div class="background-image-holder">
            <img alt="Background Image" class="background-image" src="/img/micubania/home-slider/1.jpg" />
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="uppercase mb8">Eventos y Jornadas</h2>
                </div>
                <div class="col-md-6 text-right">
                    <ol class="breadcrumb breadcrumb-2">
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li class="active">Eventos y Jornadas</li>
                    </ol>
                </div>
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>

    {% for event in events %}
        {% if event.start_time|date('Y-m-d') >= "now"|date('Y-m-d')  %}
            <section style="padding-bottom: 20px">
                <div class="container">
                    <div class="row v-align-children">
                        <div class="col-md-6 col-sm-6 text-center mb-xs-24">
                            <img class="cast-shadow" alt="Screenshot" src="{{ event.cover }}" />
                        </div>
                        <div class="col-md-6 col-md-offset-1 col-sm-5 col-sm-offset-1">
                            <h3>{{ event.title }}</h3>
                            <h6 class="uppercase mb8 number">{{ event.start_time | date('d/m/Y h:s A') }} - {{ event.end_time | date('d/m/Y h:s A') }}</h6>
                            <p>
                                {{ event.description | raw }}
                            </p>
                            <span class="btn btn-sm">Atienden: <b>{{ event.attending_count }}</b></span>
                            <span class="btn btn-sm">Interesados: <b>{{ event.interested_count }}</b></span>

                            <h5>{{ event.place.name }}</h5>
                            <h6>{{ event.place.location.street }}, {{ event.place.location.city }}, {{ event.place.location.country }}</h6>
                            <a class="btn-filled btn" href="https://facebook.com/{{ event.id }}" target="_blank">Ver Evento</a>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
        {% endif %}
    {% endfor %}
{% endblock %}